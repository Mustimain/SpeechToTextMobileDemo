<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeechToTextMobileDemo.MainPage">

    <StackLayout>
        <Label Text="Ses Kaydı" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold"></Label>
        <Button Text="Kayda Başla" Command="{Binding StartRecord}"></Button>
        <Button Text="Kaydı Bitir" Command="{Binding StopRecord}"></Button>
        <Button Text="Kaydı Getir" Command="{Binding GetRecord}"></Button>

        <Label Text="Kayıt Edilen Metin:"></Label>
        <Label Text="{Binding SpeechText}"></Label>

    </StackLayout>
</ContentPage>

